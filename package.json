{
  "name": "calmm-app",
  "version": "1.0.0",
  "description": "Calmm.js Setup",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "build:js": "NODE_ENV=production browserify src/main.js -t babelify -g envify -v -p bundle-collapser/plugin -p [minifyify --no-map --uglify [ --compress [ --dead_code ] --mangle ] ] | uglifyjs -m -e -c dead_code,screw-ie8,warnings=false > build/bundle.js",
    "watch:js": "watchify src/main.js -t babelify -g envify -o build/bundle.js -v",
    "build:css": "postcss --use 'postcss-assets-rebase' --postcss-assets-rebase.assetsPath './build/assets/' --use 'postcss-import' --use autoprefixer --use cssnano -o ./build/style.min.css style.css",
    "watch:css": "postcss --use 'postcss-assets-rebase' --postcss-assets-rebase.assetsPath './build/assets/' --use 'postcss-import' --use autoprefixer --use cssnano -w -o ./build/style.min.css style.css",
    "serve:static": "http-server -a 0.0.0.0 -p 3000 -c 20 -s -o",
    "watch": "npm-run-all -p -r watch:js watch:css",
    "build": "npm-run-all -p build:js build:css",
    "dev": "npm-run-all -p -r watch serve:static"
  },
  "author": "Laszlo Korte",
  "license": "ISC",
  "dependencies": {
    "atom.storage": "^0.3.4",
    "atom.undo": "^0.3.2",
    "karet": "^0.1.3",
    "karet.util": "^0.1.3",
    "kefir": "^3.5.1",
    "kefir.atom": "^2.2.3",
    "kefir.combines": "^1.0.0",
    "kefir.react.html": "^3.2.5",
    "partial.lenses": "^3.8.0",
    "ramda": "^0.22.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "url-pattern": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "bundle-collapser": "^1.2.1",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.7.5",
    "envify": "^3.4.1",
    "http-server": "^0.9.0",
    "minifyify": "^7.3.3",
    "npm-run-all": "^3.1.0",
    "postcss-assets-rebase": "^0.4.0",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^8.1.2",
    "uglifyify": "^3.0.3",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
